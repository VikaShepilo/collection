{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<div class="container">
    <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="{{ asset('build/img/item.png') }}" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4>{{ item.nameItem }}</h4>
                            <p class="text-secondary mb-1">Collection: {{ item.collections }}</p>
                        </div>
                    </div>
                </div>
            </div>
                <div class="card mt-3">
                    {% for tag in item.tags %}
                        <h5><a href="{{ path('tag_search', {'name':tag.name}) }}">#{{ tag.name }} </a></h5>
                    {% endfor %} 
                </div>
                </div>
                <div class="col-md-8">
                <div class="card mb-3">
               
                {% for info in information %}
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Best comment'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.commentTop == NULL %}
                                {{ info.commentTop  }}
                            {% else %}
                                {{ info.commentTop | markdown_to_html}}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Review'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.review == NULL %}
                                {{ info.review  }}
                            {% else %}
                                {{ info.review | markdown_to_html}}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Criticism'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.criticism == NULL %}
                                {{ info.criticism  }}
                            {% else %}
                                {{ info.criticism | markdown_to_html}}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Date publication'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.publicationDate == NULL %}
                            {% else %}
                                {{ info.publicationDate |date('d-m-Y') }}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Date authors of birth'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.authorIsDateOfBirth == NULL %}
                            {% else %}
                                {{ info.authorIsDateOfBirth |date('d-m-Y') }}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Development start date'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.developmentDate == NULL %}
                            {% else %}
                                {{ info.developmentDate |date('d-m-Y') }}
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Integrity of history'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.integrityOfHistory == 1 %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                </svg>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'One author'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.oneAuthor == 1 %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                </svg>
                            {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">{{'Abult content'|trans}}</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                            {% if info.abultContent == 1 %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            {% else %}
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                </svg>
                            {% endif %}
                            </div>
                        </div>
                    </div>    
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">{{'Fees'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                    {{ info.fees }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">{{'Place in the top'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                    {{ info.placeInTheTop }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="mb-0">{{'Number of awards'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-3 text-secondary">
                                    {{ info.numberOfAwards }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="mb-0">{{'Author'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-4 text-secondary">
                                    {{ info.author }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="mb-0">{{'Genre'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-4 text-secondary">
                                    {{ info.genre }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <h6 class="mb-0">{{'Country'|trans}}</h6>
                                    </div>
                                    <div class="col-sm-4 text-secondary">
                                    {{ info.country }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %} 
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                {{ 'Comments'|trans }}
                </div>
                <div class="panel-body comments">
                    {% if app.user != null %}
                        {% if app.user.locked != 0 %}
                        {% else %}
                            {{ form_start(form) }}
                                {{ form_row(form.text, {'attr': {'class': 'form-control', 'rows':'5' }}) }}
                            <br>
                            <button type="submit" class="btn btn-info pull-right" id="form_submit" name="form[submit]">{{ 'Submit'|trans }}</button>
                            {{ form_end(form) }}
                        {% endif %}
                    {% endif %}
                    <hr>
                    <ul class="media-list">
                        {% if comments|length > 0 %}
                            {% for comment in comments %}
                                <li class="media">
                                    <div class="comment">
                                        <div class="media-body">
                                            <strong class="text-info">{{ comment.author }}</strong>
                                                <span class="text-muted"><small class="text-muted">{{ comment.createdAt|date('Y-m-d H:i:s')}}</small></span>
                                                <p>{{ comment.text }}</p>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        {% else %}
                            <div>{{ 'No comments'|trans }}</div>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
